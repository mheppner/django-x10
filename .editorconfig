root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{py,html,md,txt,js,css}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 99

[*.{html,js}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 99

[Makefile]
indent_style = tab
